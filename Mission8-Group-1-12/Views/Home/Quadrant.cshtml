@{
    ViewData["Title"] = "Quadrants";
}

@model List<listEntry>

<h1>The 4 Quadrants of Importance</h1>

<table style="width: 100%; height: 100%;">
    <tr>
        <td style="background-color: lightblue; text-align: center; font-size: 24px; font-weight: bold;">
            Quadrant 1 (Urgent and Important)
        </td>
        <td style="background-color: lightgreen; text-align: center; font-size: 24px; font-weight: bold;">
            Quadrant 2 (Not Urgent but Important)
        </td>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            @if (x.Quadrant == 1 | x.Quadrant == 2)
            {
                if (x.Quadrant == 1)
                {
                    <td>@x.Task</td>
                    <td></td>
                }


                if (x.Quadrant == 2)
                {
                    <td></td>
                    <td>@x.Task</td>
                }
            }
        </tr>
    }





    <tr>
        <td style="background-color: lightpink; text-align: center; font-size: 24px; font-weight: bold;">
            Quadrant 3 (Urgent but Not Important)
        </td>
        <td style="background-color: lightyellow; text-align: center; font-size: 24px; font-weight: bold;">
            Quadrant 4 (Niether Urgent or Important)
        </td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            @if (x.Quadrant == 3 | x.Quadrant == 4)
            {
                if (x.Quadrant == 3)
                {
                    <td>@x.Task</td>
                    <td></td>
                }


                if (x.Quadrant == 4)
                {
                    <td></td>
                    <td>@x.Task</td>
                }
            }
        </tr>
    }

</table>

